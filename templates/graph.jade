extends base.jade
block content
   .container
      .row
         .span2
            ul.nav.nav-list.well
               li.nav-header PDU Management
               li
                  a(href="#addPDU",role="button",data-toggle="modal",data-target="#add-pdu") Add PDU
               li
                  a(href="") Edit PDU
               li
                  a(href="") Remove PDU
               li.divider
         .span9.well
            table.table.table-bordered.table-hover
               thead
                  tr
                     td ID
                     td Name
                     td Status
                     td Uptime
                     td Consumption
               tbody
                  for d in test
                    tr.clickable
                      td
                        a(href="/pdugraph/#{d['id']}")=d['id']
                      td=d['name']
                      td
                        if d['status']=="online"
                          span.label.label-success Online
                        else
                          span.label.label-important Offline
                      td=d['uptime']
                      td=d['consumption']



      .footer.span12.text-center
