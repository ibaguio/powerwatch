extends base.jade
block content
   .container
      .row
         .span2
            ul.nav.nav-list.well
               li.nav-header PDU Management
               li
                  a(href="#addPDU",role="button",data-toggle="modal",data-target="#add-pdu") Add PDU
               li
                  a(href="") Edit PDU
               li
                  a(href="") Remove PDU
               li.divider
         .span9.well
            table.table.table-bordered.table-hover
               thead
                  tr
                     td ID
                     td Name
                     td Status
                     td Uptime
                     td Consumption
               tbody
                  for d in test
                    tr.clickable
                      td
                        a(href="/pdugraph/#{d['id']}")=d['id']
                      td=d['name']
                      td
                        if d['status']=="online"
                          span.label.label-success Online
                        else
                          span.label.label-important Offline
                      td=d['uptime']
                      td=d['consumption']

   .modal.hide.fade#add-pdu(role="dialog",aria-labelledby="myModalLabel",aria-hidden="true")
      .modal-header
         button.close(type="button",data-dismiss="modal",aria-hidden="false",role="dialog")&times
         h3 Add PDU
      .modal-body
        form.form-horizontal(action="/pdu/new", method="post")
            .control-group
                label.control-label(for='pdu_name') PDU Name
                .controls
                  input#pdu_name(type='text', placeholder='PDU Name')
              .control-group
                label.control-label(for='ipaddress') IP Address
                .controls
                  input#ipaddress(type='text', placeholder='IP Address')
              .control-group
                .controls
                  button.btn(type='submit') Add

block othernav
   ul.nav
      li
         a(href="/dashboard") Home
      li.active
         a(href="/") Admin Page

block account 
  ul.nav.pull-right
    form.navbar-search.pull-left
